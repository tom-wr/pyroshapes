package {	import flash.display.MovieClip;	import flash.events.MouseEvent;	public class LevelA extends Level	{		public function LevelA(counter:Counter, shapeMaker:ShapeMaker)		{			super(counter, shapeMaker);				_instructionsOn = true;			drawGeo();			drawObjectives();			setShapeCount();					makeInstructions();		}				private function makeInstructions():void {			var instructionsScreen:MovieClip = new Instructions();			instructionsScreen.x = _counter.swfWidth/2;			instructionsScreen.y = _counter.swfHeight/2;			instructionsScreen.startButton.addEventListener(MouseEvent.CLICK, closeInstructions);			_counter.levelSprite.addChild(instructionsScreen);					}				private function closeInstructions(e:MouseEvent):void {			_instructionsOn = false;			_counter.levelSprite.removeChild(e.target.parent);			makeTutorialDialog();		}				private function makeTutorialDialog():void{			var tutDialog:MovieClip = new TutorialDialog();			tutDialog.x = _counter.swfWidth/2 - 35;			tutDialog.y =  40;			_counter.levelSprite.addChild(tutDialog);		}				private function setShapeCount():void {			_counter.circleCount = 1;			_counter.squareCount = 0;		}				private function drawGeo():void {						_shapeMaker.makeStatic(10,70, _counter.swfWidth/2, 380);			_shapeMaker.makeDynamicBox(100, 15, _counter.swfWidth/2, 315);			geoMakeGround();		}				private function drawObjectives():void{						var objective1:DynamicBody = _shapeMaker.birthObjective(320, 250);			var objective2:DynamicBody = _shapeMaker.birthObjective(380, 250);			var objective3:DynamicBody = _shapeMaker.birthObjective(260, 250);						_counter.addToDynmaicList(objective1);			_counter.addToDynmaicList(objective2);			_counter.addToDynmaicList(objective3);									}				private function geoMakeGround():void {										//First quarter			_shapeMaker.makeStatic(20, 25, 20, _counter.swfHeight-20);			_shapeMaker.makeFire(20, 25, 60, _counter.swfHeight-20);			_shapeMaker.makeFire(40, 25, 100, _counter.swfHeight-20);						//Second quarter			_shapeMaker.makeFire(40, 25, 140, _counter.swfHeight-20);			_shapeMaker.makeFire(40, 25, 180, _counter.swfHeight-20);					_shapeMaker.makeFire(40, 25, 220, _counter.swfHeight-20);			_shapeMaker.makeFire(20, 25, 260, _counter.swfHeight-20);						//Central pair			_shapeMaker.makeStatic(20, 20, 300, _counter.swfHeight-20);			_shapeMaker.makeStatic(20, 20, 340, _counter.swfHeight-20);						//Third quarter			_shapeMaker.makeFire(20, 25, 380, _counter.swfHeight-20);			_shapeMaker.makeFire(40, 25, 420, _counter.swfHeight-20);			_shapeMaker.makeFire(40, 25, 460, _counter.swfHeight-20);			_shapeMaker.makeFire(40, 25, 500, _counter.swfHeight-20);						//Last quarter			_shapeMaker.makeFire(40, 25, 540, _counter.swfHeight-20);			_shapeMaker.makeFire(20, 25, 580, _counter.swfHeight-20);			_shapeMaker.makeStatic(20, 25, 620, _counter.swfHeight-20);		}			}}