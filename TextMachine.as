package {	import flash.text.TextFormat;	public class TextMachine	{		private var _toolBarFormat:TextFormat;		private var _menuFormat:TextFormat;						public function TextMachine()		{			_toolBarFormat = makeToolBarFormat();			_menuFormat = makeMenuFormat();					}				private function makeToolBarFormat():TextFormat{			var newFormat:TextFormat = new TextFormat();			newFormat.color = 0xFFFFFF;			newFormat.font = "Skia-Regular";			newFormat.size = 12;						return newFormat;		}				private function makeMenuFormat():TextFormat{			var newFormat:TextFormat = new TextFormat();			newFormat.color = 0x000000;			newFormat.font = "Skia-Regular";			newFormat.size = 16;						return newFormat;		}				public function get toolBarFormat():TextFormat{			return _toolBarFormat;		}				public function get menuFormat():TextFormat {			return _menuFormat;		}			}}