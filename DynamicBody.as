package {		import Box2D.Dynamics.b2Body;	import flash.display.MovieClip;	import Box2D.Common.Math.b2Vec2;		public class DynamicBody	{		private var _body:b2Body;		private var _skin:MovieClip;		private var _bodyWidth:Number;		private var _bodyHeight:Number;		private var _counter:Counter;				public function DynamicBody(body:b2Body, skin_:MovieClip, 									bodyWidth:Number, bodyHeight:Number, counter:Counter)		{			_body = body;			_skin = skin_;			_bodyWidth = bodyWidth;			_bodyHeight = bodyHeight;			_counter = counter;			setSkinPosition();			setSkinSize();			_counter.levelSprite.addChild(_skin);			trace("made dynamic object: " + _skin)		}				private function setSkinPosition():void{			var bodyVec:b2Vec2 = _body.GetPosition();			_skin.x = bodyVec.x * _counter.pixelToMetre;			_skin.y = bodyVec.y * _counter.pixelToMetre;		}				private function setSkinSize():void {			_skin.height = _bodyHeight*2;			_skin.width = _bodyWidth*2;		}				public function updateSkin():void {			_skin.x = _body.GetPosition().x * _counter.pixelToMetre;			_skin.y = _body.GetPosition().y * _counter.pixelToMetre;			_skin.rotation = _body.GetAngle()* (180 /Math.PI);		}				public function get body():b2Body {			return _body;		}				public function get bodySkin():MovieClip {			return _skin;		}	}}